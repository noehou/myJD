<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fwy.tommaso.jdmall">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JDApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/frag_main"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/frag_main"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.RegistActivity"
            android:label="@string/title_activity_regist"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ProductListActivity"
            android:label="@string/title_activity_product_list" />
        <activity
            android:name=".activity.ProductDetailsActivity"
            android:label="@string/ProductDetailsActivity" />
        <activity
            android:name=".activity.SettleActivity"
            android:label="@string/title_activity_settle" />
        <activity
            android:name=".activity.AddReceiverActivity"
            android:label="@string/title_activity_add_receiver" />
        <activity
            android:name=".activity.ChooseReceiverActivity"
            android:label="@string/title_activity_choose_receiver" />
        <activity
            android:name=".activity.OrderListActivity"
            android:label="OrderListActivity" />
        <activity
            android:name=".activity.AlipayActivity"
            android:label="@string/title_activity_alipay" />
        <activity
            android:name=".activity.OrderDetailsActivity"
            android:label="@string/title_activity_order_details"></activity>
    </application>

</manifest>